{
  "name": "rwc",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@10.28.2",
  "scripts": {
    "dev": "vite",
    "build": "tsup",
    "preview": "vite preview",
    "test": "vitest",
    "test:run": "vitest run",
    "typecheck": "tsc --noEmit",
    "check:bundle-size": "size-limit"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./style.css": "./dist/style.css",
    "./adapters/nanostores": {
      "types": "./dist/adapters/nanostores.d.ts",
      "import": "./dist/adapters/nanostores.js"
    },
    "./adapters/spred": {
      "types": "./dist/adapters/spred.d.ts",
      "import": "./dist/adapters/spred.js"
    }
  },
  "files": [
    "dist"
  ],
  "size-limit": [
    {
      "name": "core (minified)",
      "path": "dist/index.js",
      "brotli": false,
      "limit": "21290 B"
    },
    {
      "name": "core (gzip)",
      "path": "dist/index.js",
      "gzip": true,
      "limit": "6879 B"
    }
  ],
  "peerDependencies": {
    "@spred/core": "^0.41.5",
    "nanostores": "^1.1.0"
  },
  "peerDependenciesMeta": {
    "@spred/core": {
      "optional": true
    },
    "nanostores": {
      "optional": true
    }
  },
  "devDependencies": {
    "@floating-ui/dom": "^1.7.5",
    "@size-limit/file": "^12.0.0",
    "@types/node": "^25.2.1",
    "happy-dom": "^20.4.0",
    "size-limit": "^12.0.0",
    "terser": "^5.46.0",
    "tsup": "^8.0.0",
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
    "vitest": "^4.0.18"
  }
}
